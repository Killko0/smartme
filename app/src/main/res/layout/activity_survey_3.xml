<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".survey.Survey_1">

    <TextView
            android:text="Question 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginTop="178dp"
            android:layout_marginBottom="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView7" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="How many people live in your household?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="30sp"
            android:gravity="center" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginBottom="121dp"
            app:layout_constraintBottom_toTopOf="@+id/seekBar"/>
    <Button
            android:text="next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:onClick="nextStep"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" android:layout_marginBottom="101dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/seekBar"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginBottom="139dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/button4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="53dp" android:layout_marginEnd="53dp"
            style="@style/Widget.AppCompat.SeekBar.Discrete" android:visibility="visible" android:minWidth="150dp"/>
</android.support.constraint.ConstraintLayout>