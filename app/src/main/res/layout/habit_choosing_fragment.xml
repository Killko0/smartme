<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="300dp"
        android:layout_height="500dp"
        tools:context=".HabitChoosing">

    <TextView
            android:id="@+id/text_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HabitName"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <Button
            android:text="Leave it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button6"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp"/>
    <TextView
            android:text="Sample lorem ipsum text for habit descrption"
            android:layout_width="175dp"
            android:layout_height="72dp"
            android:id="@+id/textView9"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="62dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="63dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/text_fragment"/>
    <Button
            android:text="Take it!"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>