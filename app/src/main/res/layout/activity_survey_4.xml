<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".survey.Survey_1">

    <TextView
            android:text="4ème question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView7"
            android:layout_marginTop="180dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Vous passez le plus de temps à la maison"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="30sp"
            android:gravity="center" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="100dp"/>
    <Button
            android:text="suivant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:onClick="nextStep"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="100dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="134dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox3" app:layout_constraintVertical_bias="0.0"/>
    <CheckBox
            android:text="..le matin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginEnd="156dp"
            app:layout_constraintEnd_toEndOf="@+id/textView7"/>
    <CheckBox
            android:text="..l'après-midi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            app:layout_constraintStart_toStartOf="@+id/checkBox" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox"/>
    <CheckBox
            android:text="..le soir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox3"
            app:layout_constraintStart_toStartOf="@+id/checkBox2" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox2"/>
</android.support.constraint.ConstraintLayout>