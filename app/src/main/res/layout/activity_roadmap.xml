<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
android:id="@+id/frameRoadmap">
    <ScrollView
            android:id="@+id/scrollView1" android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@id/frameRoadmap"
            android:layout_marginTop="0dp" app:layout_constraintBottom_toBottomOf="parent"
    >

        <android.support.constraint.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/roadmapLayout" android:paddingTop="0dp" android:layout_marginTop="0dp">


            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/roadmap_2"
                    android:id="@+id/imageView4"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/roadmap_1"
                    android:id="@+id/imageView5"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:layout_constraintTop_toBottomOf="@id/imageView4"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp" app:srcCompat="@drawable/week2_plant_grey"
                    android:id="@+id/imageView11"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="68dp"
                    android:layout_marginBottom="388dp" app:layout_constraintBottom_toBottomOf="@+id/imageView5"/>
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp" app:srcCompat="@drawable/week2_plant_grey"
                    android:id="@+id/imageView12"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="148dp"
                    android:layout_marginBottom="476dp" app:layout_constraintBottom_toBottomOf="@+id/imageView5"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="@drawable/week2_plant_grey"
                    android:id="@+id/imageView13"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
                    android:layout_marginBottom="564dp" app:layout_constraintBottom_toBottomOf="@+id/imageView5"/>
            <ImageView
                    android:layout_width="51dp"
                    android:layout_height="38dp" app:srcCompat="@drawable/week1"
                    android:id="@+id/week_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="100dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="92dp"
                    android:clickable="true"
                    android:scaleType="center" android:focusable="true"/>
            <ImageView
                    android:layout_width="48dp"
                    android:layout_height="46dp" app:srcCompat="@drawable/marcou_standing"
                    android:id="@+id/imageView6" android:layout_marginBottom="65dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="120dp"/>
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp" app:srcCompat="@drawable/week1_plant_grey"
                    android:id="@+id/imageView7"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView5" android:layout_marginBottom="136dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="148dp"/>
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp" app:srcCompat="@drawable/week1_plant_grey"
                    android:id="@+id/imageView8"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView5" android:layout_marginBottom="204dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="232dp"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="@drawable/week1_plant_grey"
                    android:id="@+id/imageView9"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView5" android:layout_marginBottom="280dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="188dp"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="@drawable/week2_sign_grey"
                    android:id="@+id/imageView10"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    android:layout_marginBottom="368dp" app:layout_constraintBottom_toBottomOf="@+id/imageView5"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
        <fragment
                android:layout_width="0dp"
                android:layout_height="56dp" android:name="berlin.code.smartme.smartme.ui.BottomNavigation"
                android:id="@+id/fragment2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
        />
        <FrameLayout
                android:id="@+id/active_habits_layout"
                android:layout_width="200dp"
                android:layout_height="240dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="96dp"
                app:layout_constraintStart_toStartOf="parent">

        </FrameLayout>
        <FrameLayout android:layout_width="240dp" android:layout_height="300dp"
                     android:id="@+id/habitChoosingLayout"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="136dp"
                     app:layout_constraintStart_toStartOf="parent">

        </FrameLayout>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
