<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="240dp"
                                             android:layout_height="300dp"
                                             tools:context=".survey.StartSurvey" android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:id="@+id/textView12"/>
    <TextView
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:text="Hi! My name is Marcou and I'm here to help you save energy. But first I need to know more about you!"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"/>
    <Button
            android:text="Start Survey"
            android:layout_width="132dp"
            android:layout_height="37dp"
            android:id="@+id/button5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" android:onClick="onStartPressed"/>
    <Button
            android:text="No thanks!"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:id="@+id/button8" android:layout_marginEnd="66dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="66dp"
            android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/button5"/>

</android.support.constraint.ConstraintLayout>